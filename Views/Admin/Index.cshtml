    @*.......................ADD DEP WORK START.............................................*@


    <section class="box">
        <h3>
            <center> All Departement</center>
            @Html.ActionLink("New Departement", "addDep", "Admin", new { @class = "button special small" })

        </h3>

        <div class="table-wrapper">

            @{
                WebGrid griddep = new WebGrid(@ViewBag.dep, rowsPerPage: 5);
                griddep.SortDirection = SortDirection.Descending;
                @griddep.GetHtml(

                columns: new[] {
                                            griddep.Column("Dep_ID","ID"),
                                            griddep.Column("Dep_name","Departement Name"),
                                            griddep.Column("Dep_role","Departement Role"),
                                            griddep.Column("", format: (dep) =>
                                         new HtmlString(
                                                Html.ActionLink("Edit", "editDep", "Admin", new
                                               {
                                                   id = dep.Dep_ID,
                                               }, null).ToString() + " | " +

                                                Html.ActionLink("Delete", "deleteDep", "Admin", new
                                               {
                                                   id = dep.Dep_ID,
                                               }, null).ToString()
                                               ))

                                            }
                );
            }

