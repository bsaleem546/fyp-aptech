<section id="main" class="container">
    <header>
        <h2>e_Adminstrator</h2>
        <p>Admin Panel</p>
        @using (Html.BeginForm("", "", FormMethod.Post)) 
        {
            @Html.TextBox("s", null, new { @placeholder = "Type To Search" })
