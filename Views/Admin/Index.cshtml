            <select name="role">
                <option value="">Type Of Search</option>
                <option value="d">Department</option>
                <option value="u">Users</option>
                <option value="b">Batch</option>
                <option value="s">Student</option>
                <option value="l">Lab</option>
                <option value="lt">Lab Timmings</option>
