<html>
<head>
    <title>e_Adminstrator | @ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="~/Content/main.css" />
    <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/ie8.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.slim.js"></script>
    <script src="~/Scripts/jquery-3.1.1.slim.min.js"></script>
</head>
<body class="landing">
    <div id="page-wrapper">

        <!-- Header -->
        <header id="header">
            <h1><a href="#">e-Administration</a></h1>
            <nav id="nav">
                <ul>
                    <li>
                        @Html.ActionLink("Home", "index", "Home")
                        
                    </li>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">About Us</a></li>
                    <li>
                        <ul>
                          
                        </ul>
                    </li>
                    <li>
                        @{
                            if (Session["user"] == null) 
                            {
                                @Html.ActionLink("Sign In", "signIn", "Home", new { @class = "button" })
                            }
                            else 
                            {
                                @Html.ActionLink("Sign Out", "signOut", "Home", new { @class = "button" })
                            }
                        }
                     </li>
                </ul>
            </nav>
        </header>



        @RenderBody()

        <!-- Footer -->
        <footer id="footer">
            <ul class="icons">
                <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon fa-github"><span class="label">Github</span></a></li>
                <li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
                <li><a href="#" class="icon fa-google-plus"><span class="label">Google+</span></a></li>
            </ul>
            <ul class="copyright">
                <li>&copy; e Administration All rights reserved.</li>
                <li>E Project (6th Semester).</li>
            </ul>
        </footer>

    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dropotron.min.js"></script>
    <script src="~/Scripts/jquery.scrollgress.min.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
    <script src="~/Scripts/main.js"></script>

    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/html5shiv.js"></script>
</body>
</html>


@Scripts.Render("~/bundles/jquery")
@RenderSection("scripts", required: false)